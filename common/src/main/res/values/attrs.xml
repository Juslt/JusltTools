<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomToolBar">
        <attr name="left_icon" format="reference|integer"/>
        <attr name="title_name" format="string"/>
        <attr name="title_name_color" format="color"/>
        <attr name="right_text" format="string"/>
        <attr name="right_text_color" format="color"/>
        <attr name="right_icon" format="reference|integer"/>

        <attr name="is_show_divider" format="boolean"/>
        <attr name="is_show_back_icon" format="boolean"/>
        <attr name="background_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomViewPager">
        <attr name="is_have_transformer" format="boolean"/>
        <attr name="is_auto_scroll" format="boolean"/>
    </declare-styleable>
</resources>